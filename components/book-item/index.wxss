/* components/book-item/index.wxss */
.book-item-box {
    width: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    margin: auto auto 24rpx;
}
.book-item-box .book-item-cover {
    width: 100%;
    height: 270rpx;
    margin-bottom: 12rpx;
}
.book-item-box .text {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}
.book-item-box .book-item-title {
    font-size: 32rpx;
}
.book-item-box .book-item-author {
    font-size: 24rpx;
    color: rgb(146, 133, 133);
}