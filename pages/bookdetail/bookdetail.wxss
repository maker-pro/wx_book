/* pages/bookdetail/bookdetail.wxss */
.top-box {
    display: flex;
    flex-direction: column;
}
.top-box .head-img {
    width: 100%;
    height: 400rpx;
    filter: blur(20px);
}
.top-box .top-box-style{
    width: 100%;
    height: 360rpx;
    position: absolute;
    top: 40rpx;
    box-shadow: none;
    background: none;
}
.top-box .top-box-title {
    font-size: 45rpx;
    font-weight: bold;
}
.top-box .content view {
    margin-top: 30rpx;
    font-weight: lighter;
}

.book-detail {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.book-detail .book-detail-text {
    line-height: 60rpx;
    width: 90%;
}
.book-detail-text-show {
    height: auto;
    overflow: unset;
}
.book-detail-text-hidden {
    height: 150rpx;
    overflow: hidden;
}

.book-chapter-box {
    margin-top: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.book-chapter-box .book-chapter-btn {
    font-weight: bold;
}
.book-chapter-box .book-chapter-list {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 130rpx;
    width: 100%;
}
.book-chapter-box .book-chapter-list .book-chapter-item {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
    margin-top: 15rpx;
    padding: 15rpx;
    line-height: 60rpx;
    border: brown 1px solid;
    width: 90%;
}
.book-chapter-box .book-chapter-list .show-more {
    text-align: center;
    color: blue;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}

.book-detail-bottom-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: brown;
}
.book-detail-bottom-btn > view {
    display: inline-block;
    border: brown solid 1rpx;
    width: 49%;
    text-align: center;
    padding: 30rpx 0;
    font-weight: bold;
}
.add-book-self-l-icon {
    display: inline;
    margin-right: 10rpx;
}
.add-book-self {
    background-color: white;
}
.status-read {
    color: white;
}
.add-inactive {
    color: #cccccc;
}
.book-detail-more-btn {
    width: 100%;
    text-align: center;
}
.network-bad-loading-image {
    width: 30%;
    position: fixed;
    top: 20%;
    left: 35%;
}