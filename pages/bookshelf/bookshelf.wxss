/* pages/bookshelf/bookshelf.wxss */
page, .box-container {
    width: 100%;
    height: 100%;
}
.edit-delete-background {
    background-color: #DCDCDC;
}
.top-edit {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding-right: 20rpx;
    padding-top: 20rpx;
    color: blue;
    font-weight: 500;
}
.edit-delete-cancel {
    color: #8e8e8e;
}
.edit-delete-submit {
    color: red;
    margin-left: 30rpx;
}
.bookshelf-list {
    display: grid;
    grid-template-columns: 33% 33% 33%;
    padding: 20rpx;
}
.bookshelf-item {
    margin-top: 5rpx;
}
.bookshelf-item-delete {
    position: relative;
    border: 1px solid #d63838;
    padding: 4px;
}
.bookshelf-item-delete:after {
    position: absolute;
    content: '';
    width: 0px;
    height: 0px;
    top: 0px;
    right: 0px;
    border-top: 10px solid #d63838;
    border-bottom: 10px solid transparent;
    border-left: 10px solid transparent;
    border-right: 10px solid #d63838;
    z-index: 1;
}
.bookshelf-item-delete:before {
    position: absolute;
    content: '';
    width: 4px;
    height: 8px;
    transform: rotate(45deg);
    border-right: 2px solid #FFF;
    border-bottom: 2px solid #FFF;
    top: 0px;
    right: 3px;
    z-index: 2;
}
.not-book-show {
    color: #888282;
    text-align: center;
    padding-top: 20%;
}
.network-bad-loading-image {
    width: 30%;
    position: fixed;
    top: 20%;
    left: 35%;
}